@page "/login"
@using SmartMove.Abstraction
@using SmartMove.Model

<!-- Container for centering the login form in the middle of the page -->
<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <!-- Row containing the left and right sections of the login page -->
    <div class="row shadow" style="width: 900px;">

        <!-- Left Section: Branding and Introduction -->
        <div class="col-md-6 text-white text-center d-flex flex-column justify-content-center align-items-center" style="background-color: #32746D;">
            <!-- Company name and slogan -->
            <h1 class="display-4">M / S</h1>
            <h2>SmartMove</h2>
            <p class="lead">Spend Smarter</p>
        </div>

        <!-- Right Section: Login Form -->
        <div class="col-md-6 bg-white p-5">
            <!-- Login Form with a submit handler -->
            <form class="text-center" @onsubmit="HandleLogin">
                <!-- Heading for the login form -->
                <h1 class="h3 mb-4 fw-normal">Please Login</h1>

                <!-- Username Input Field -->
                <div class="form-floating mb-3">
                    <!-- Bind user input to the 'UserName' property of the 'user' object -->
                    <input type="text" class="form-control" id="floatingUsername" @bind="user.UserName" placeholder="Username" required />
                    <label for="floatingUsername">Username</label>
                </div>

                <!-- Password Input Field -->
                <div class="form-floating mb-3">
                    <!-- Bind user input to the 'Password' property of the 'user' object -->
                    <input type="password" class="form-control" id="floatingPassword" @bind="user.Password" placeholder="Password" required />
                    <label for="floatingPassword">Password</label>
                </div>

                <!-- Currency Dropdown (Preferred Currency Selection) -->
                <div class="form-floating mb-3">
                    <!-- Bind selected currency to the 'Currency' property of the 'user' object -->
                    <select class="form-control" id="floatingCurrency" @bind="user.Currency">
                        <!-- Iterates over all possible currency values (from the Currency enum) and displays them in a dropdown -->
                        @foreach (var currency in Enum.GetValues<Currency>())
                        {
                            <option value="@currency">@currency</option>
                        }
                    </select>
                    <label for="floatingCurrency">Preferred Currency</label>
                </div>

                <!-- Error Message Display (only shown if there's an error message) -->
                @if (!string.IsNullOrEmpty(ErrorMessage))
                {
                    <div class="alert alert-danger mt-3">@ErrorMessage</div>
                }

                <!-- Submit Button for the login form -->
                <button type="submit" class="btn btn-lg w-100 mt-4" style="background-color: #32746D; color: white; border: none;">
                    Login
                </button>
            </form>
        </div>
    </div>
</div>
